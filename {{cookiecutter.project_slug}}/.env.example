# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME={{ cookiecutter.project_name }}
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

{% if cookiecutter.use_postgresql == "yes" -%}
# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{ cookiecutter.database_name }}
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
{% endif %}

{% if cookiecutter.use_redis == "yes" -%}
# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
{% endif %}

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=false

{% if cookiecutter.include_auth == "yes" -%}
# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
{% endif %}

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@{{ cookiecutter.project_slug }}.com
EMAILS_FROM_NAME={{ cookiecutter.project_name }}

# External APIs (add as needed)
# API_KEY=your-api-key-here
